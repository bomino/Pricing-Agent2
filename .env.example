# Environment Configuration Template
# Copy this file to .env and customize for your environment

# ===========================================
# GENERAL SETTINGS
# ===========================================
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
ENVIRONMENT=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgres://pricing_user:pricing_password@localhost:5432/pricing_agent
POSTGRES_DB=pricing_agent
POSTGRES_USER=pricing_user
POSTGRES_PASSWORD=pricing_password

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# ===========================================
# APPLICATION URLS
# ===========================================
DJANGO_URL=http://localhost:8000
ML_SERVICE_URL=http://localhost:8001
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ===========================================
# ML SERVICE CONFIGURATION
# ===========================================
ML_SERVICE_JWT_SECRET=ml-service-secret-key
USE_GPU=false

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# AWS S3 (if using for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Sentry (Error Tracking)
SENTRY_DSN=

# ===========================================
# SECURITY SETTINGS
# ===========================================
# CORS Settings
CORS_ALLOW_ALL_ORIGINS=false

# Session Security
SESSION_COOKIE_SECURE=false
CSRF_COOKIE_SECURE=false
SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=0

# ===========================================
# DOCKER COMPOSE OVERRIDES
# ===========================================
COMPOSE_PROJECT_NAME=pricing-agent
COMPOSE_FILE=docker-compose.yml

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Uncomment and set these for production

# DEBUG=false
# SECRET_KEY=your-super-secure-production-secret-key
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# DATABASE_URL=postgres://user:password@prod-db-host:5432/pricing_agent
# REDIS_URL=redis://prod-redis-host:6379/0
# SESSION_COOKIE_SECURE=true
# CSRF_COOKIE_SECURE=true
# SECURE_SSL_REDIRECT=true
# SECURE_HSTS_SECONDS=31536000
# SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# KUBERNETES CONFIGURATION
# ===========================================
KUBERNETES_NAMESPACE=pricing-agent
KUBERNETES_SERVICE_TYPE=ClusterIP

# ===========================================
# CI/CD CONFIGURATION
# ===========================================
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest
GIT_COMMIT_SHA=
BUILD_NUMBER=